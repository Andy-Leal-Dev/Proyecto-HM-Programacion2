<%- include("./template/header"); %>
    <h3 class="h3Pro_User">Perfil</h3>

    <% if (Rol === 0) {%>
    <div class="div-btnUser-edit_delete">
        <button class="btn-UserEdit">Editar</button>
        <button class="btn-UserDelete">Eliminar</button>
    </div>
    <%} %>
        <div class="DataUser">
            <table class="tableDatosUser">
                <tr>
                    <td class="td-campoUser">Usuario</td>
                    <td class="td-DatosUser"><%= usuario.usuario %></td>
                </tr>
                <tr>
                    <td class="td-campoUser">Nombres</td>
                    <td class="td-DatosUser"><%= usuario.nombre %></td>
                </tr>
                <tr>
                    <td class="td-campoUser">Apellidos</td>
                    <td class="td-DatosUser"><%= usuario.apellido %></td>
                </tr>
                <tr>
                    <td class="td-campoUser">Cedula</td>
                    <td class="td-DatosUser"><%= usuario.cedula %></td>
                </tr>
                <tr>
                    <td class="td-campoUser">Sexo</td>
                    <% if (usuario.genero == 1) { %>
                        <td class="td-DatosPer">Hombre</td>
                    <% } else { %>
                        <td class="td-DatosPer">Mujer</td>
                    <% } %>
                </tr>
                <tr>
                    <td class="td-campoUser">Rol</td>
                    <% if (usuario.cargo == 1) { %>
                        <td class="td-DatosPer">Doctor(a)</td>
                    <% } else { %>
                        <td class="td-DatosPer">Secretario(a)</td>
                    <% } %>
                </tr>
                <tr>
            </table>
        </div>

