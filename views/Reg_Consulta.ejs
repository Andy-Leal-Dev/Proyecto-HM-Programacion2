<%- include("./template/header"); %>
    <form class="form_consulta" data-id="<%= id %>" data-tipo="<%= tipo %>">
        <h2 class="h2_consulta">Consulta</h2>

        <div class="div_Data">
            
            <label for="date">Fecha:</label>
            <input type="date" id="date">

            <label for="doctor">Nombre del Doctor:</label>
            <input type="text" id="doctor">

            <label for="motivo" >Motivo de la Consulta:</label>
            <input type="text" id="motivo">

        </div>
        <label for="diagnostico">Observacion:</label>
        <textarea type="text" id="observacion"></textarea>
        <label for="diagnostico">Diagnostico:</label>
        <textarea type="text" id="diagnostico"></textarea>

        <label for="tratamiento">Tratamiento:</label>
        <textarea type="text" id="tratamiento"></textarea>

    <button type="button" class="btn-registrar">Agregar</button>
    </form>

    <script src="/js/reg_consulta.js"></script>
